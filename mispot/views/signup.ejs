  <body>
    <nav
      class="navbar navbar-expand-lg navbar-dark bg-dark"
      style="position: relative"
    >
      <div class="container-fluid">
        <a
          class="navbar-brand"
          href="http://localhost:8080/home"
          style="font-family: 'Courier New', monospace; font-weight: bold"
          >MiSpot</a
        >
      </div>
    </nav>
    <div class="container-fluid" style="margin-top: 15px">
      <form
        method="post"
        class="card position-absolute top-50 start-50 translate-middle"
      >
        <div class="card-header">
          <h3 id="login" style="color: brown">REGISTER HERE</h3>
        </div>
        <div class="card-body">
          <div id="userid row" style="margin-left: 10px">
            <label>COMPANY NAME:</label>
            <input type="text" name="companyname" />
          </div>
          <br />
          <div style="margin-left: 10px">
            <label>EMAIL:</label>
            <input type="email" name="email" />
          </div>
          <br />
          <div style="margin-left: 10px">
            <label>PRICING:</label>
            <span type="text" name="pricing">₹<%=pln%> per month</span>
          </div>
          <br />
          <div style="margin-left: 10px">
            <label>PASSWORD:</label>
            <input type="password" name="password" />
          </div>
          <br />
          <br />
          <div style="align-items: center">
            <button
              class="button button1 position-absolute start-50 translate-middle"
              type="submit"
              name="submit"
            >
              SIGN UP
            </button>
          </div>
        </div>
      </form>
    </div>
