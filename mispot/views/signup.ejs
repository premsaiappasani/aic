      display: block;
      border-radius: 8px;
      width: 80px;
      height: 30px;
      border: 1px solid #696969;
      font-weight: bold;
    }
    .button1:hover {
      background-color: #696969;
      color: white;
    }
    input[type="text"] {
      box-sizing: border-box;
      border: 1px solid black;
      border-radius: 4px;
    }
    input[type="password"] {
      box-sizing: border-box;
      border: 1px solid black;
      border-radius: 4px;
    }
    input[type="email"] {
      box-sizing: border-box;
      border: 1px solid black;
      border-radius: 4px;
    }
    label {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      font-weight: bold;
      display: inline-block;
      text-align: right;
      width: 140px;
    }
